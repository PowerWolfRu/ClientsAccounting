<Window x:Class="ClientDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDB"
        mc:Ignorable="d"
        Title="Commercical Firm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Товары" Width="100" HorizontalAlignment="Center" />
            <Button Content="Услуги" Width="100" HorizontalAlignment="Center" />
            <Button Content="Список клиентов" Width="135" HorizontalAlignment="Center"/>
        </StackPanel>
        <Frame Grid.Row="1" Grid.Column="0" Name="MainFrame"/>
    </Grid>
</Window>
